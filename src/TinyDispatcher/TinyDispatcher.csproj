<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <LangVersion>10.0</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="9.0.10" />
  </ItemGroup>
  <ItemGroup>
    <!-- Pack generator output into the NuGet under analyzers/ -->
    <None Include="..\TinyDispatcher.SourceGen\bin\$(Configuration)\netstandard2.0\TinyDispatcher.SourceGen.dll" Pack="true" PackagePath="analyzers/dotnet/cs" Visible="false" />
  </ItemGroup>
  <PropertyGroup>
    <!-- NuGet metadata -->
    <PackageId>TinyDispatcher</PackageId>
    <Authors>Jorge Durban Antuñano</Authors>
    <Company>Innerwave</Company>
    <Product>TinyDispatcher</Product>

    <Description>TinyDispatcher is a small, compile-time oriented dispatcher for .NET with pipelines and source generation.</Description>
    <PackageTags>dotnet;dispatcher;mediator;pipeline;sourcegenerator;clean-architecture</PackageTags>

    <PackageProjectUrl>https://github.com/george2006/TinyDispatcher</PackageProjectUrl>
    <RepositoryUrl>https://github.com/george2006/TinyDispatcher</RepositoryUrl>
    <RepositoryType>git</RepositoryType>

    <PackageLicenseExpression>MIT</PackageLicenseExpression>

    <!-- Show README on nuget.org -->
    <PackageReadmeFile>README.md</PackageReadmeFile>

    <!-- Optional but nice -->
    <PackageReleaseNotes>Alpha release.</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <!-- Make sure the README is included in the .nupkg root -->
    <None Include="..\..\README.md" Pack="true" PackagePath="\" />
  </ItemGroup>
  <PropertyGroup>
    <PackageReleaseNotes>
      🚀 Performance Architecture Hardening

      - Removed internal handler map infrastructure.
      - Removed handler contribution / registry system.
      - Dispatcher now resolves handlers directly via closed generic DI registrations.
      - Simplified internal architecture by eliminating handler map state and lookup indirection.
      - Reduced hot-path overhead during command dispatch.
      - Improved maintainability and reduced moving parts in multi-assembly scenarios.

      ⚠️ Internal breaking change:
      Handler resolution now relies entirely on DI registrations generated by TinyDispatcher.SourceGen.
      Custom or manual handler map integrations are no longer supported.

      This change is part of ongoing v1 performance hardening.
    </PackageReleaseNotes>

  </PropertyGroup>

</Project>
