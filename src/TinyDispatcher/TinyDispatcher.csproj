<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <LangVersion>10.0</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="9.0.10" />
  </ItemGroup>
  <ItemGroup>
    <!-- Pack generator output into the NuGet under analyzers/ -->
    <None Include="..\TinyDispatcher.SourceGen\bin\$(Configuration)\netstandard2.0\TinyDispatcher.SourceGen.dll" Pack="true" PackagePath="analyzers/dotnet/cs" Visible="false" />
  </ItemGroup>
  <PropertyGroup>
    <!-- NuGet metadata -->
    <PackageId>TinyDispatcher</PackageId>
    <Authors>Jorge Durban Antuñano</Authors>
    <Company>Innerwave</Company>
    <Product>TinyDispatcher</Product>

    <Description>TinyDispatcher is a small, compile-time oriented dispatcher for .NET with pipelines and source generation.</Description>
    <PackageTags>dotnet;dispatcher;mediator;pipeline;sourcegenerator;clean-architecture</PackageTags>

    <PackageProjectUrl>https://github.com/george2006/TinyDispatcher</PackageProjectUrl>
    <RepositoryUrl>https://github.com/george2006/TinyDispatcher</RepositoryUrl>
    <RepositoryType>git</RepositoryType>

    <PackageLicenseExpression>MIT</PackageLicenseExpression>

    <!-- Show README on nuget.org -->
    <PackageReadmeFile>README.md</PackageReadmeFile>

   </PropertyGroup>

  <ItemGroup>
    <!-- Make sure the README is included in the .nupkg root -->
    <None Include="..\..\README.md" Pack="true" PackagePath="\" />
  </ItemGroup>
  <PropertyGroup>
    <PackageReleaseNotes>
      Introduced unified validation layer for TinyDispatcher source generator.

      - Added IGeneratorValidator, GeneratorValidationContext, DiagnosticBag
      - Added PipelineDiagnosticsValidator
      - Enforced single UseTinyDispatcher&lt;TContext&gt; call per host project
      - Added pipeline diagnostics:
      * Middleware targeting unknown command (warning)
      * Policy targeting unknown command (warning)
      * Multiple policies targeting same command (warning)
      - Migrated duplicate handler validation to unified validation system
      - Internal generator cleanup and consistency improvements

      No breaking API changes.
    </PackageReleaseNotes>


  </PropertyGroup>

</Project>
